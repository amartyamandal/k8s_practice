pipeline {
   agent any

   stages {
      stage('download artifacts') {
         steps {
            sh 'wget https://raw.githubusercontent.com/amartyamandal/k8s_practice/master/kubernetes/kubectl/add-cluster-to-meshub.sh'
         }
      }
      stage('register new cluster') {
         steps {
             sh 'chmod +x ./add-cluster-to-meshub.sh'
             sh './add-cluster-to-meshub.sh'
         }
      }
      stage('remove artifact') {
         steps {
             sh 'rm add-cluster-to-meshub.sh'
         }
      }
   }
   post { 
      always { 
         cleanWs()
      }
   }
}
